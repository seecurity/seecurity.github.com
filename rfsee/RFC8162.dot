  RFC8162 [label="RFC8162
Using Secure DNS to Associate
Certificates with Domain Names for
S/MIME
2017", shape=ellipse, fillcolor="#e8f0ff", tooltip="This document describes how to use secure DNS to associate an S/MIME user's certificate with the intended domain name, similar to the way that DNS-Based Authentication of Named Entities (DANE), RFC 6698, does for TLS.", style=filled, fillcolor=green]; 

  obs_by [label="obsoletes", shape=box, style=filled, fillcolor=lightblue];
  obs_by -> RFC8162;

  obs [label="obsoletes", shape=box, style=filled, fillcolor=lightblue];

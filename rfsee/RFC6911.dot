  cites -> RFC3646;
  RFC6158 [label="RFC6158
RADIUS Design Guidelines
2011", shape=ellipse, URL="RFC6158.html", target="_top", tooltip="This document provides guidelines for the design of attributes used by the Remote Authentication Dial In User Service (RADIUS) protocol.  It is expected that these guidelines will prove useful to authors and reviewers of future RADIUS attribute specifications, within the IETF as well as other Standards Development Organizations (SDOs).  This memo documents an Internet Best Current Practice."];
  cites -> RFC6158;
  RFC6614 [label="RFC6614
Transport Layer Security (TLS)
Encryption for RADIUS
2012", shape=ellipse, URL="RFC6614.html", target="_top", tooltip="This document specifies a transport profile for RADIUS using Transport Layer Security (TLS) over TCP as the transport protocol.  This enables dynamic trust relationships between RADIUS servers. [STANDARDS-TRACK]"];

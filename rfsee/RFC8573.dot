  RFC8573 [label="RFC8573
Message Authentication Code for the
Network Time Protocol
2019", shape=ellipse, fillcolor="#e8f0ff", tooltip="The Network Time Protocol (NTP), as described in RFC 5905, states that NTP packets should be authenticated by appending NTP data to a 128-bit key and hashing the result with MD5 to obtain a 128-bit tag.  This document deprecates MD5-based authentication, which is considered too weak, and recommends the use of AES-CMAC as described in RFC 4493 as a replacement.", style=filled, fillcolor=green, fontsize=18, penwidth=3, fontweight=bold]; 

  obs_by [label="obsoletes", shape=box, style=filled, fillcolor=lightblue];
  obs_by -> RFC8573;

  obs [label="obsoletes", shape=box, style=filled, fillcolor=lightblue];
  RFC8573 -> obs;

  updates [label="updates", shape=box, style=filled, fillcolor=lightyellow];

  RFC2119 [label="RFC2119
Key words for use in RFCs to Indicate
Requirement Levels
1997", shape=ellipse, URL="RFC2119.html", target="_top", tooltip="In many standards track documents several words are used to signify the requirements in the specification.  These words are often capitalized.  This document defines these words as they should be interpreted in IETF documents.  This document specifies an Internet Best Current Practices for the Internet Community, and requests discussion and suggestions for improvements."];
  cites -> RFC2119;
  RFC1771 [label="RFC1771
A Border Gateway Protocol 4 (BGP-4)
1995", shape=ellipse, URL="RFC1771.html", target="_top", tooltip="This document, together with its companion document, Application of the Border Gateway Protocol in the Internet, define an inter-autonomous system routing protocol for the Internet. [STANDARDS-TRACK]"];
  cites -> RFC1771;
  RFC3345 [label="RFC3345
Border Gateway Protocol (BGP) Persistent
Route Oscillation Condition
2002", shape=ellipse, URL="RFC3345.html", target="_top", tooltip="None"];
  cites -> RFC3345;
  RFC2796 [label="RFC2796
BGP Route Reflection - An Alternative to
Full Mesh IBGP
2000", shape=ellipse, URL="RFC2796.html", target="_top", tooltip="This document describes the use and design of a method known as Route Reflection to alleviate the the need for full mesh IBGP. [STANDARDS-TRACK]"];
  cites -> RFC2796;
  RFC3065 [label="RFC3065
Autonomous System Confederations for BGP
2001", shape=ellipse, URL="RFC3065.html", target="_top", tooltip="This document describes an extension to BGP which may be used to create a confederation of autonomous systems that is represented as a single autonomous system to BGP peers external to the confederation, thereby removing the full mesh requirement.  The intention of this extension is to aid in policy administration and reduce the management complexity of maintaining a large autonomous system. [STANDARDS-TRACK]"];
  cites -> RFC3065;
  RFC2439 [label="RFC2439
BGP Route Flap Damping
1998", shape=ellipse, URL="RFC2439.html", target="_top", tooltip="A usage of the BGP routing protocol is described which is capable of reducing the routing traffic passed on to routing peers and therefore the load on these peers without adversely affecting route convergence time for relatively stable routes. [STANDARDS-TRACK]"];
  cites -> RFC2439;


  RFC8251 [label="RFC8251
Updates to the Opus Audio Codec
2017", shape=ellipse, fillcolor="#e8f0ff", tooltip="This document addresses minor issues that were found in the specification of the Opus audio codec in RFC 6716.  It updates the normative decoder implementation included in Appendix A of RFC 6716.  The changes fix real and potential security-related issues, as well as minor quality-related issues.", style=filled, fillcolor=green]; 

  obs_by [label="obsoletes", shape=box, style=filled, fillcolor=lightblue];
  obs_by -> RFC8251;


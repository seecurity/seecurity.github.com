  RFC2547 [label="RFC2547
BGP/MPLS VPNs
1999", shape=ellipse, URL="RFC2547.html", target="_top", tooltip="This document describes a method by which a Service Provider with an IP backbone may provide VPNs (Virtual Private Networks) for its customers.  This memo provides information for the Internet community."];
  obs -> RFC2547;

  updates [label="updates", shape=box, style=filled, fillcolor=lightyellow];

digraph Flow {
  layout=twopi;
  root=RFC2554;
  overlap=false;
  RFC2554 [label="RFC2554
SMTP Service Extension for
Authentication
1999", shape=ellipse, fillcolor="#e8f0ff", tooltip="This document defines an SMTP service extension [ESMTP] whereby an SMTP client may indicate an authentication mechanism to the server, perform an authentication protocol exchange, and optionally negotiate a security layer for subsequent protocol interactions. [STANDARDS-TRACK]", style=filled, fillcolor=green, fontsize=18, penwidth=3, fontweight=bold]; 

  obs_by [label="obsoletes", shape=box, style=filled, fillcolor=lightblue];
  obs_by -> RFC2554;
  RFC4954 [label="RFC4954
SMTP Service Extension for
Authentication
2007", shape=ellipse, URL="RFC4954.html", target="_top", tooltip="This document defines a Simple Mail Transport Protocol (SMTP) extension whereby an SMTP client may indicate an authentication mechanism to the server, perform an authentication protocol exchange, and optionally negotiate a security layer for subsequent protocol interactions during this session. This extension includes a profile of the Simple Authentication and Security Layer (SASL) for SMTP. This document obsoletes RFC 2554. [STANDARDS-TRACK]"];
  RFC4954 -> obs_by;

  obs [label="obsoletes", shape=box, style=filled, fillcolor=lightblue];
  RFC2554 -> obs;

  updates [label="updates", shape=box, style=filled, fillcolor=lightyellow];
  RFC2554 -> updates;

  updated_by [label="updates", shape=box, style=filled, fillcolor=lightyellow];
  updated_by -> RFC2554;

  cites [label="cites", shape=box, style=filled, fillcolor=lightblue];
  RFC2554 -> cites;

  rev_cites [label="cites", shape=box, style=filled, fillcolor=lightblue];
  rev_cites -> RFC2554;
  RFC3013 [label="RFC3013
Recommended Internet Service Provider
Security Services and Procedures
2000", shape=ellipse, URL="RFC3013.html", target="_top", tooltip="The purpose of this document is to express what the engineering community as represented by the IETF expects of Internet Service Providers (ISPs) with respect to security.  This document specifies an Internet Best Current Practices for the Internet Community, and requests discussion and suggestions for improvements."];
  RFC3013 -> rev_cites;
  RFC4408 [label="RFC4408
Sender Policy Framework (SPF) for
Authorizing Use of Domains in E-Mail,
Version 1
2006", shape=ellipse, URL="RFC4408.html", target="_top", tooltip="E-mail on the Internet can be forged in a number of ways.  In particular, existing protocols place no restriction on what a sending host can use as the reverse-path of a message or the domain given on the SMTP HELO/EHLO commands.  This document describes version 1 of the ender Policy Framework (SPF) protocol, whereby a domain may explicitly authorize the hosts that are allowed to use its domain name, and a receiving host may check such authorization.  This memo defines an Experimental Protocol for the Internet community."];
  RFC4408 -> rev_cites;
  RFC4468 [label="RFC4468
Message Submission BURL Extension
2006", shape=ellipse, URL="RFC4468.html", target="_top", tooltip="The submission profile of Simple Mail Transfer Protocol (SMTP) provides a standard way for an email client to submit a complete message for delivery.  This specification extends the submission profile by adding a new BURL command that can be used to fetch submission data from an Internet Message Access Protocol (IMAP) server.  This permits a mail client to inject content from an IMAP server into the SMTP infrastructure without downloading it to the client and uploading it back to the server. [STANDARDS-TRACK]"];
  RFC4468 -> rev_cites;
}
